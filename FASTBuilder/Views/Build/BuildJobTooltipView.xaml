<UserControl x:Class="FastBuilder.Views.Build.BuildJobTooltipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastBuilder.Views.Build"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <materialDesign:Card UniformCornerRadius="2"
                         Margin="8"
                         materialDesign:ShadowAssist.ShadowDepth="Depth3"
                         Background="{Binding UIBackground}"
                         TextElement.Foreground="{Binding UIForeground}">
        <StackPanel Margin="8">
            <TextBlock Text="{Binding DisplayName}"
                       Style="{DynamicResource MaterialDesignTitleTextBlock}" />
            <TextBlock Text="{Binding DisplayStatus}"
                       Style="{DynamicResource MaterialDesignSubheadingTextBlock}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="{Binding EventName}"
                       Margin="0,8,0,0"/>
            <TextBlock Text="{Binding DisplayStartTime}"
                       Margin="0,4,0,0"/>
            <TextBlock Text="{Binding DisplayElapsedSeconds}"
                       Margin="0,4,0,0"/>
        </StackPanel>
    </materialDesign:Card>
</UserControl>
