<UserControl x:Class="FastBuilder.Views.Build.BuildSessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             MinWidth="600"
             xmlns:support="clr-namespace:FastBuilder.Support"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:build="clr-namespace:FastBuilder.Views.Build"
             PreviewMouseWheel="UserControl_PreviewMouseWheel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ProgressBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>

        <materialDesign:Card DockPanel.Dock="Bottom">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"
                           Text="Status" />

                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Right">
                    <Border CornerRadius="2"
                            BorderThickness="1"
                            BorderBrush="{StaticResource JobBorderBrush_Building}"
                            Background="{StaticResource JobBackgroundBrush_Building}"
                            TextElement.Foreground="{StaticResource JobForegroundBrush_Building}"
                            Padding="8,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="10"
                                       VerticalAlignment="Center"
                                       Text="In Progress" />
                            <TextBlock x:Name="InProgressJobCount"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="6,0,0,0"
                                       Text="2" />
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="2"
                            BorderThickness="1"
                            BorderBrush="{StaticResource JobBorderBrush_Success}"
                            Background="{StaticResource JobBackgroundBrush_Success}"
                            TextElement.Foreground="{StaticResource JobForegroundBrush_Success}"
                            Margin="8,0,0,0"
                            Padding="8,2,2,2">
                        <StackPanel Orientation="Horizontal">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="10"
                                           VerticalAlignment="Center"
                                           Text="Successful" />
                                <TextBlock x:Name="SuccessfulJobCount"
                                           VerticalAlignment="Center"
                                           Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                           Margin="6,0,0,0"
                                           Text="2" />
                            </StackPanel>


                            <Border CornerRadius="2"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource JobBorderBrush_SuccessCached}"
                                    Background="{StaticResource JobBackgroundBrush_SuccessCached}"
                                    TextElement.Foreground="{StaticResource JobForegroundBrush_SuccessCached}"
                                    Padding="6,0"
                                    Margin="8,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="10"
                                               VerticalAlignment="Center"
                                               Text="Cache Hit" />
                                    <TextBlock x:Name="CacheHitCount"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                               Margin="6,0,0,0"
                                               Text="2" />
                                </StackPanel>

                            </Border>
                        </StackPanel>
                    </Border>

                    

                    <Border CornerRadius="2"
                            BorderThickness="1"
                            BorderBrush="{StaticResource JobBorderBrush_Failed}"
                            Background="{StaticResource JobBackgroundBrush_Failed}"
                            TextElement.Foreground="{StaticResource JobForegroundBrush_Failed}"
                            Padding="8,2"
                            Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="10"
                                       VerticalAlignment="Center"
                                       Text="Failed" />
                            <TextBlock x:Name="FailedJobCount"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       Margin="6,0,0,0"
                                       Text="2" />
                        </StackPanel>
                    </Border>

                </StackPanel>

                <StackPanel Grid.Column="2"
                            Margin="24,0,0,0"
                            Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Clock"
                                             VerticalAlignment="Center" />
                    <TextBlock x:Name="DisplayElapsedTime"
                               Margin="4,0,0,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Text="0:00:00" />
                </StackPanel>
                
            </Grid>
        </materialDesign:Card>
        
        <Grid>

            <Border x:Name="IsSessionViewVisible">
                <Grid>

                    <ScrollViewer x:Name="BackgroundScrollViewer" 
                                  IsEnabled="False"
                                  IsHitTestVisible="False"
                                  Margin="0,0,17,17"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden">
                        <DockPanel>
                            <Grid Height="{Binding ElementName=TimeRuler, Path=ActualHeight}" 
                                  DockPanel.Dock="Bottom" /> <!-- leave blank for time ruler -->
                            
                            <build:BuildSessionWorkersBackgroundView x:Name="WorkersBackground"
                                                                     HorizontalAlignment="Stretch" />
                        </DockPanel>
                    </ScrollViewer>

                    <support:DragScrollViewer x:Name="ContentScrollViewer" 
                                  HorizontalScrollBarVisibility="Visible"
                                  VerticalScrollBarVisibility="Visible"
                                  ScrollChanged="ContentScrollViewer_ScrollChanged">
                        <DockPanel>
                            <Grid Height="{Binding ElementName=TimeRuler, Path=ActualHeight}" 
                                  DockPanel.Dock="Bottom" />   <!-- leave blank for time ruler -->

                            <build:BuildJobsView x:Name="BuildJobsView"
                                                 SizeChanged="BuildJobsView_SizeChanged"
                                                 Height="{Binding ElementName=WorkersHeader, Path=ActualHeight}"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top" />
                        </DockPanel>
                    </support:DragScrollViewer>

                    <ScrollViewer x:Name="HeaderScrollViewer"
                                  IsEnabled="False"
                                  IsHitTestVisible="False"
                                  Margin="0,0,17,17"
                                  HorizontalAlignment="Left"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden">
                        <DockPanel>
                            <Grid Height="{Binding ElementName=TimeRuler, Path=ActualHeight}"
                                  DockPanel.Dock="Bottom" /> <!-- leave blank for time ruler -->

                            <build:BuildSessionWorkersHeaderView x:Name="WorkersHeader"
                                                                 Height="{Binding ElementName=WorkersBackground, Path=ActualHeight}"
                                                                 HorizontalAlignment="Left" />
                        </DockPanel>
                    </ScrollViewer>

                    <build:TimeRulerView x:Name="TimeRuler" 
                                         Margin="0,0,17,16.5"
                                         VerticalAlignment="Bottom"
                                         Height="24" />

                    <build:BuildWorkerStatusView HorizontalAlignment="Left"
                                                 VerticalAlignment="Bottom"
                                                 Width="{StaticResource HeaderViewWidth}"
                                                 Height="24" 
                                                 Margin="0,0,0,16.5" />
                </Grid>
            </Border>

            <Border Background="#E0FFFFFF"
                    x:Name="IsRestoringHistory">
                <StackPanel VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"                     
                                 HorizontalAlignment="Center"
                                 Value="0"
                                 Width="48"
                                 Height="48"
                                 IsIndeterminate="True" />
                    <TextBlock Text="Restoring history..."
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
